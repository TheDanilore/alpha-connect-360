<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Cambiar nombre del sistema -->
        <record id="alpha_connect_system_name" model="ir.config_parameter">
            <field name="key">web.base.title</field>
            <field name="value">Alpha Connect</field>
        </record>
        
        <!-- Cambiar pÃ¡gina predeterminada -->
        <record id="alpha_connect_home_action" model="ir.config_parameter">
            <field name="key">web.base.url.freeze</field>
            <field name="value">True</field>
        </record>
        
        <!-- Favicon -->
        <record id="alpha_connect_favicon" model="ir.config_parameter">
            <field name="key">web.favicon.url</field>
            <field name="value">/alpha_connect_theme/static/src/img/favicon.ico</field>
        </record>
        
        <!-- Desactivar Community backlink -->
        <record id="alpha_connect_disable_backlink" model="ir.config_parameter">
            <field name="key">disable_odoo_link</field>
            <field name="value">True</field>
        </record>
        
        <!-- Configurar URL base -->
        <record id="alpha_connect_base_url" model="ir.config_parameter">
            <field name="key">web.base.url</field>
            <field name="value">http://localhost:8069/web</field>
        </record>
    </data>
</odoo>
