<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Portal Layout -->
    <template id="portal_layout" inherit_id="portal.portal_layout" name="Alpha Connect Portal Layout">
        <!-- Replace logo -->
        <xpath expr="//header//a[hasclass('navbar-brand')]//img" position="attributes">
            <attribute name="src">/alpha_connect_theme/static/src/img/alpha_connect_logo.png</attribute>
            <attribute name="alt">Alpha Connect</attribute>
            <attribute name="class">img-fluid alpha-portal-logo</attribute>
        </xpath>
        
        <!-- Replace page title -->
        <xpath expr="//title" position="replace">
            <title>Portal - Alpha Connect <t t-if="page_name">| <t t-esc="page_name"/></t></title>
        </xpath>
        
        <!-- Footer -->
        <xpath expr="//footer" position="replace">
            <footer class="o_footer_copyright alpha-portal-footer">
                <div class="container py-3">
                    <div class="row">
                        <div class="col-sm-6 text-sm-left text-center">
                            <span class="o_footer_copyright_name">Â© <t t-esc="time.strftime('%Y')"/> Alpha Connect</span>
                        </div>
                        <div class="col-sm-6 text-sm-right text-center">
                            <span>Alpha Connect 360 - Sistema de CRM Avanzado</span>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>
    
    <!-- Portal My Home -->
    <template id="portal_my_home" inherit_id="portal.portal_my_home" name="Alpha Connect Portal My Home">
        <xpath expr="//div[hasclass('o_portal_my_home')]//h3" position="replace">
            <h3 class="alpha-portal-title">Dashboard Alpha Connect</h3>
        </xpath>
    </template>
    
    <!-- Portal My Details -->
    <template id="portal_my_details" inherit_id="portal.portal_my_details" name="Alpha Connect Portal My Details">
        <xpath expr="//div[hasclass('o_portal_my_details')]//h3" position="replace">
            <h3 class="alpha-portal-title">Mi Perfil</h3>
        </xpath>
    </template>
</odoo>
