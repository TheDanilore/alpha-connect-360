<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template personalizado para el login -->
    <template id="login" inherit_id="web.login" name="Alpha Connect Login">
        <xpath expr="//div[hasclass('container')]" position="attributes">
            <attribute name="class">container alpha-login-container</attribute>
        </xpath>
        
        <!-- Reemplazar logo -->
        <xpath expr="//div[hasclass('card-body')]//img" position="attributes">
            <attribute name="src">/alpha_connect_theme/static/src/img/alpha_connect_logo.png</attribute>
            <attribute name="alt">Alpha Connect</attribute>
            <attribute name="class">img-fluid alpha-login-logo</attribute>
        </xpath>
        
        <!-- Título de login -->
        <xpath expr="//h2" position="replace">
            <h2 class="alpha-login-title">Bienvenido a Alpha Connect</h2>
        </xpath>
        
        <!-- Form de login -->
        <xpath expr="//form" position="attributes">
            <attribute name="class">alpha-login-form</attribute>
        </xpath>
        
        <!-- Estilo para campos de formulario -->
        <xpath expr="//input[@name='login']" position="attributes">
            <attribute name="class">form-control alpha-input</attribute>
            <attribute name="placeholder">Email o Usuario</attribute>
        </xpath>
        
        <xpath expr="//input[@name='password']" position="attributes">
            <attribute name="class">form-control alpha-input</attribute>
            <attribute name="placeholder">Contraseña</attribute>
        </xpath>
        
        <!-- Botón de login -->
        <xpath expr="//button[hasclass('btn-primary')]" position="attributes">
            <attribute name="class">btn btn-primary btn-block alpha-btn-login</attribute>
            <attribute name="t-translation">off</attribute>
        </xpath>
        
        <xpath expr="//button[hasclass('btn-primary')]" position="replace">
            <button type="submit" class="btn btn-primary btn-block alpha-btn-login">
                <span>Iniciar Sesión</span>
            </button>
        </xpath>
        
        <!-- Footer -->
        <xpath expr="//div[hasclass('card-footer')]" position="replace">
            <div class="card-footer bg-transparent alpha-login-footer">
                <div class="text-center alpha-copyright">
                    <div>© <t t-esc="time.strftime('%Y')"/> Alpha Connect. Todos los derechos reservados</div>
                </div>
            </div>
        </xpath>
        
        <!-- Eliminar referencias a Odoo -->
        <xpath expr="//div[contains(@class, 'o_database_list')]" position="attributes">
            <attribute name="class">card border-0 shadow alpha-login-card</attribute>
        </xpath>
    </template>
    
    <!-- Template personalizado para la página de registro -->
    <template id="signup" inherit_id="auth_signup.signup" name="Alpha Connect Signup">
        <xpath expr="//div[hasclass('card-body')]//img" position="attributes">
            <attribute name="src">/alpha_connect_theme/static/src/img/alpha_connect_logo.png</attribute>
            <attribute name="alt">Alpha Connect</attribute>
            <attribute name="class">img-fluid alpha-login-logo</attribute>
        </xpath>
        
        <xpath expr="//h2" position="replace">
            <h2 class="alpha-login-title">Crear Cuenta</h2>
        </xpath>
        
        <xpath expr="//button[hasclass('btn-primary')]" position="replace">
            <button type="submit" class="btn btn-primary btn-block alpha-btn-login">
                <span>Registrarse</span>
            </button>
        </xpath>
    </template>
    
    <!-- Template personalizado para el restablecimiento de contraseña -->
    <template id="reset_password" inherit_id="auth_signup.reset_password" name="Alpha Connect Reset Password">
        <xpath expr="//div[hasclass('card-body')]//img" position="attributes">
            <attribute name="src">/alpha_connect_theme/static/src/img/alpha_connect_logo.png</attribute>
            <attribute name="alt">Alpha Connect</attribute>
            <attribute name="class">img-fluid alpha-login-logo</attribute>
        </xpath>
        
        <xpath expr="//h2" position="replace">
            <h2 class="alpha-login-title">Restablecer Contraseña</h2>
        </xpath>
        
        <xpath expr="//button[hasclass('btn-primary')]" position="replace">
            <button type="submit" class="btn btn-primary btn-block alpha-btn-login">
                <span>Restablecer Contraseña</span>
            </button>
        </xpath>
    </template>
</odoo>
